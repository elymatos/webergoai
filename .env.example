# .env.example
# Environment configuration template
# Copy this to .env and update the values

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://ergoai_user:your_secure_database_password_here@postgres:5432/ergoai_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
FLASK_ENV=production
SECRET_KEY=your_very_secure_secret_key_minimum_32_characters_here
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ErgoAI Configuration
ERGOAI_PATH=/opt/ergoai
ERGOAI_TIMEOUT=30

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000/ws

# Security Configuration (for production)
JWT_SECRET_KEY=another_secure_jwt_key_here

# Optional - Monitoring
SENTRY_DSN=your_sentry_dsn_here
