// using claude variables

@textColor:#333;
@selectedTextColor: var(--text-default);
@successColor: var(--color-success-600);
@primaryColor: #1a365d; // var(--color-primary-600);
@secondaryColor: #2c7a7b;//var(--color-secondary-500);
